<% layout('layouts/boilerplate')%>

    <div id="cluster-map"></div>
    <div class="container">
        <div class="container-md text-center mt-4">
            <div class="row justify-content-center mb-3">
                <div class="col-md-10">
                    <h3 class="dsplay-4">Our Students</h3>
                    <hr>
                </div>
            </div>
        </div>
        <div class="row">
            <% for (let campground of campgrounds){%>

                <div class="col-sm-4">
                    <div class="card mb-4 shadow bg-body h-80 rounded-3" id="featurecard">
                        <%if(campground.images.length) {%>
                            <img class="img-fluid" alt=""id="indeximg"   src="<%=campground.images[0].url%>">
                            <% }else {%> 
                                <img class="img-fluid rounded-3" alt=""
                                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                                <% } %>
                                    <div class="card-body">
                                        <h4>
                                            <%= campground.title %>
                                        </h4>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <%= campground.location%>
                                            </small>
                                        </p>
                                        <p id="discription">
                                            <%= campground.description %>
                                        </p>

                                        <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View
                                            more
                                        </a>
                                    </div>
                    </div>
                </div>
                <% }%>

        </div>
    </div>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
    </script>

    <script src="/javascripts/clusterMap.js"></script>